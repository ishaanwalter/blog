<h1><%= @article.title %></h1>

<p><%= @article.body %></p>
<% if user_signed_in? %>
<p>
  <%= link_to "Edit", edit_article_path(@article) , class: "btn btn-primary btn-sm"%>

  <%= link_to "Destroy", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: "btn btn-primary btn-sm" %>
</p>
<%end%>

